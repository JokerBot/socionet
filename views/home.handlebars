<div id='login-form-div'>
    <div class="card">
        <div class="card-body">
            <form id="login-form" action="/users/login" method="post">
                <p class="h4 text-center py-4 ">Login</p>
                <div class="md-form">
                    <i class="fa fa-envelope prefix grey-text"></i>
                    <input type="email"class="form-control" name="email" placeholder="email">
                </div>
                <div class="md-form">
                    <i class="fa fa-lock prefix grey-text"></i>
                    <input type="password" class="form-control" name="account_key" placeholder="password">
                </div>
                <div class="text-center py-4 mt-3">
                    <button class="btn btn-primary" type="submit">Login</button>
                </div>
                <div>
                    <p>new user?<a href='/users/signup'>create a new account</a><p>
                </div>
            </form>
        </div>
    </div>
